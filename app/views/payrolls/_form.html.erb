<div ng-app="anApp">
<div ng-controller="DatepickerCtrl">

<%= form_for(@payroll, :html=>{:class=>"form-inline", :role=>"form"}) do |f| %>
  <% if @payroll.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@payroll.errors.count, "error") %> prohibited this payroll from being saved:</h2>

      <ul>
      <% @payroll.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label>Start Date</label>
    <%=f.text_field(:start_date, :class=>"form-control", 'datepicker-popup'=>"yyyy-MM-dd", 'ng-model'=>"start_date", 'datepicker-options'=>"dateOptions", 'ng-required'=>"true")%>
  </div>
  <div class="form-group">
    <label>End Date</label>
    <%=f.text_field(:end_date, :class=>"form-control", 'datepicker-popup'=>"yyyy-MM-dd", 'ng-model'=>"end_date", 'datepicker-options'=>"dateOptions", 'ng-required'=>"true")%>
  </div>
  
	<br/>
	<pre>Selected date is: <em>{{start_date | date:'fullDate' }}</em> to <em>{{end_date | date:'fullDate' }}</em></pre>
	<br/>

  <%= f.submit :class=>"btn btn-primary"%>
<% end %>

</div>
</div>
