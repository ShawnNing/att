<table class="table table-striped table-bordered table-condensed">
  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= link_to store.name, store %></td>
        <td>
          <%= link_to 'Edit', edit_store_path(store), class: "btn btn-primary" %> 
          <%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </td>
        <td>
          <%= link_to 'Employees', employees_path, class: "btn btn-primary" %>
          <%= link_to 'Payroll', payrolls_path, class: "btn btn-primary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

